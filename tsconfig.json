{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./out",
		"rootDir": "./src",
		"noEmitOnError": true,
		"strict": true,
		"moduleResolution": "node",
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"jasmine",
			"node"
		],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules/*"
	]
}